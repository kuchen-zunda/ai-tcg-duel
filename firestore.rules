rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /games/{gid}/internal/{doc} { allow read, write: if false; }
    match /games/{gid}/public/{doc}   { allow read: if true; allow write: if false; }
    match /games/{gid}/private/{uid}  { allow read: if request.auth != null && request.auth.uid == uid; allow write: if false; }
    match /games/{gid}/events/{eid}   { allow read: if true; allow write: if false; }
  }
}